FROM python:2.7-slim-buster

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    git \
    curl \
    apache2 \
    libapache2-mod-wsgi \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Trac and dependencies
RUN pip install --no-cache-dir \
    Trac==1.4.4 \
    psycopg2==2.8.6 \
    Genshi==0.7.7 \
    Babel==2.9.1 \
    Pygments==2.5.2 \
    pytz \
    requests

# Create Trac environment directory
RUN mkdir -p /var/trac/projects

# Copy minimal configuration
COPY config/trac.ini /app/config/

# Copy plugins
COPY plugins/ /app/plugins/

# Install plugins
RUN cd /app/plugins/learntrac_display && python setup.py install

# Create a simple startup script
RUN echo '#!/bin/bash\n\
trac-admin /var/trac/projects/learntrac initenv "LearnTrac" sqlite:db/trac.db\n\
cp /app/config/trac.ini /var/trac/projects/learntrac/conf/\n\
tracd --port 8000 /var/trac/projects/learntrac\n\
' > /usr/local/bin/start-trac.sh && chmod +x /usr/local/bin/start-trac.sh

EXPOSE 8000

CMD ["/usr/local/bin/start-trac.sh"]